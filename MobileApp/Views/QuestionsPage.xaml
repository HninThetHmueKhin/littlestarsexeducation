<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ChildSafeSexEducation.Mobile.Views.QuestionsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Questions"
             BackgroundColor="#E8F5E8">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="White" 
                Padding="20">
            <Grid>
                <Label x:Name="TopicTitleLabel" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="#27AE60" 
                       VerticalOptions="Center"/>
                <Button x:Name="BackButton" 
                        Text="Back to Topics" 
                        BackgroundColor="White" 
                        TextColor="#27AE60" 
                        FontSize="14" 
                        FontAttributes="Bold" 
                        BorderColor="#27AE60" 
                        BorderWidth="2" 
                        CornerRadius="15" 
                        Padding="15,8" 
                        HorizontalOptions="End" 
                        VerticalOptions="Center"
                        Clicked="BackButton_Clicked"/>
            </Grid>
        </Border>

        <!-- Questions List -->
        <ScrollView Grid.Row="1" 
                    BackgroundColor="White" 
                    Padding="20">
            <StackLayout x:Name="QuestionsStackLayout" Spacing="15"/>
        </ScrollView>
    </Grid>

</ContentPage>
