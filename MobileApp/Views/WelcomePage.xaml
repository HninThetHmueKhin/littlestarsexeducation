<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ChildSafeSexEducation.Mobile.Views.WelcomePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Little Star"
             BackgroundColor="#E8F8F5">

    <ScrollView>
        <StackLayout Padding="20" Spacing="30">
            
            <!-- Language Selection -->
            <StackLayout x:Name="LanguagePanel" Spacing="15">
                <Label x:Name="LanguageTitle" 
                       Text="Select Language" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="#2D3436" 
                       HorizontalOptions="Center" 
                       Margin="0,0,0,20"/>
                
                <Button x:Name="EnglishButton" 
                        Text="English" 
                        BackgroundColor="#00D4AA" 
                        TextColor="White" 
                        FontSize="16" 
                        FontAttributes="Bold" 
                        CornerRadius="12" 
                        Padding="20,12" 
                        Clicked="EnglishButton_Clicked"/>
                
                <Button x:Name="BurmeseButton" 
                        Text="မြန်မာ" 
                        BackgroundColor="#00D4AA" 
                        TextColor="White" 
                        FontSize="16" 
                        FontAttributes="Bold" 
                        CornerRadius="12" 
                        Padding="20,12" 
                        Clicked="BurmeseButton_Clicked"/>
            </StackLayout>

            <!-- Welcome Form -->
            <StackLayout x:Name="WelcomePanel" IsVisible="False" Spacing="30">
                <!-- Header -->
                <StackLayout HorizontalOptions="Center" Spacing="10">
                    <Label Text="🌟" 
                           FontSize="48" 
                           HorizontalOptions="Center"/>
                    <Label x:Name="WelcomeTitle" 
                           Text="⭐ Little Star" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="#00D4AA" 
                           HorizontalOptions="Center"/>
                    <Label x:Name="WelcomeSubtitle" 
                           Text="A safe space to learn about growing up" 
                           FontSize="16" 
                           TextColor="#636E72" 
                           HorizontalOptions="Center" 
                           HorizontalTextAlignment="Center"/>
                </StackLayout>

                <!-- Name Input -->
                <StackLayout Spacing="10">
                    <Label x:Name="NameLabel" 
                           Text="What's your name?" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#2D3436"/>
                    <Entry x:Name="NameEntry" 
                           Placeholder="Enter your name" 
                           BackgroundColor="White" 
                           TextColor="#2D3436" 
                           FontSize="16" 
                           MaxLength="20"/>
                </StackLayout>

                <!-- Age Selection -->
                <StackLayout Spacing="10">
                    <Label x:Name="AgeLabel" 
                           Text="How old are you?" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#2D3436"/>
                    <Picker x:Name="AgePicker" 
                            BackgroundColor="White" 
                            TextColor="#2D3436" 
                            FontSize="16">
                        <Picker.Items>
                            <x:String>Select your age</x:String>
                            <x:String>8 years old</x:String>
                            <x:String>9 years old</x:String>
                            <x:String>10 years old</x:String>
                            <x:String>11 years old</x:String>
                            <x:String>12 years old</x:String>
                            <x:String>13 years old</x:String>
                            <x:String>14 years old</x:String>
                            <x:String>15 years old</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>

                <!-- Start Button -->
                <Button x:Name="StartButton" 
                        Text="Start Learning" 
                        BackgroundColor="#00D4AA" 
                        TextColor="White" 
                        FontSize="18" 
                        FontAttributes="Bold" 
                        CornerRadius="25" 
                        Padding="20,15" 
                        Clicked="StartButton_Clicked"/>

                <!-- Footer -->
                <Label x:Name="FooterLabel" 
                       Text="Child-friendly education for ages 8-15" 
                       FontSize="12" 
                       TextColor="#636E72" 
                       HorizontalOptions="Center" 
                       HorizontalTextAlignment="Center"/>
            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>
