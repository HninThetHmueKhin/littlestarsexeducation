<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ChildSafeSexEducation.Mobile.Views.AnswerPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Answer"
             BackgroundColor="#E8F5E8">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="White" 
                Padding="20">
            <Grid>
                <Label Text="Answer" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="#27AE60" 
                       VerticalOptions="Center"/>
                <Button x:Name="BackButton" 
                        Text="Back to Questions" 
                        BackgroundColor="White" 
                        TextColor="#27AE60" 
                        FontSize="14" 
                        FontAttributes="Bold" 
                        BorderColor="#27AE60" 
                        BorderWidth="2" 
                        CornerRadius="15" 
                        Padding="15,8" 
                        HorizontalOptions="End" 
                        VerticalOptions="Center"
                        Clicked="BackButton_Clicked"/>
            </Grid>
        </Border>

        <!-- Answer Content -->
        <ScrollView Grid.Row="1" 
                    BackgroundColor="White" 
                    Padding="20">
            <StackLayout Spacing="20">
                
                <!-- Question Display -->
                <Frame BackgroundColor="#A8E6CF" 
                       BorderColor="#27AE60" 
                       CornerRadius="10" 
                       Padding="20">
                    <Label x:Name="QuestionLabel" 
                           FontSize="18" 
                           FontAttributes="SemiBold" 
                           TextColor="#27AE60" 
                           LineBreakMode="WordWrap"/>
                </Frame>

                <!-- Answer Display -->
                <Frame BackgroundColor="White" 
                       BorderColor="#E9ECEF" 
                       BorderWidth="1" 
                       CornerRadius="15" 
                       Padding="25">
                    <Label x:Name="AnswerLabel" 
                           FontSize="16" 
                           TextColor="#2C3E50" 
                           LineBreakMode="WordWrap" 
                           LineHeight="24"/>
                </Frame>

            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
