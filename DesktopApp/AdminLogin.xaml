<Window x:Class="ChildSafeSexEducation.Desktop.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" 
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="🔐 Admin Login" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Enter admin credentials to access dashboard" 
                       FontSize="14" 
                       Foreground="#7F8C8D" 
                       HorizontalAlignment="Center" 
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Login Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Username:" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50" 
                           Margin="0,0,0,8"/>
                <TextBox x:Name="UsernameTextBox" 
                         FontSize="16" 
                         Padding="15,12" 
                         BorderBrush="#BDC3C7" 
                         BorderThickness="2" 
                         Background="White"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="Password:" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50" 
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox" 
                             FontSize="16" 
                             Padding="15,12" 
                             BorderBrush="#BDC3C7" 
                             BorderThickness="2" 
                             Background="White"/>
            </StackPanel>

            <Button x:Name="LoginButton" 
                    Content="Login" 
                    Style="{StaticResource ModernButton}"
                    Click="LoginButton_Click"
                    HorizontalAlignment="Center"
                    MinWidth="150"/>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="Default credentials: admin / admin" 
                       FontSize="12" 
                       Foreground="#95A5A6" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
