<Window x:Class="ChildSafeSexEducation.Desktop.BlogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blog Article" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock x:Name="BlogTitle" 
                   Grid.Row="0"
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#333"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>
        
        <!-- Category -->
        <TextBlock x:Name="BlogCategory" 
                   Grid.Row="1"
                   FontSize="14" 
                   Foreground="#666"
                   Margin="0,0,0,10"/>
        
        <!-- Description -->
        <ScrollViewer Grid.Row="3" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,10,0,20">
            <TextBlock x:Name="BlogDescription" 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       LineHeight="20"/>
        </ScrollViewer>
        
        <!-- Close Button -->
        <Button x:Name="CloseButton" 
                Grid.Row="4"
                Content="Close" 
                HorizontalAlignment="Right"
                Padding="20,8"
                Background="#0078D7"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
