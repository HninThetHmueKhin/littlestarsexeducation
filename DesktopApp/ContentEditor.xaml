<Window x:Class="ChildSafeSexEducation.Desktop.ContentEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Content Editor - Add Questions and Answers" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="📝 Content Editor" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Question Input -->
                <GroupBox Header="New Question" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <TextBlock Text="Question Text (English):" FontWeight="Bold" FontSize="16" Margin="0,0,0,8" Foreground="#2C3E50"/>
                        <TextBox x:Name="QuestionTextTextBox" 
                                 Height="80" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 FontSize="14"
                                 Padding="10"
                                 Background="White"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="2"
                                 Tag="Enter your question here..."/>
                        
                        <TextBlock Text="Answer (English):" FontWeight="Bold" FontSize="16" Margin="0,15,0,8" Foreground="#2C3E50"/>
                        <TextBox x:Name="AnswerTextTextBox" 
                                 Height="100" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 FontSize="14"
                                 Padding="10"
                                 Background="White"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="2"/>
                        
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Topic:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="TopicComboBox" 
                                          DisplayMemberPath="Title" 
                                          SelectedValuePath="Id"
                                          Height="30"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="5,0">
                                <TextBlock Text="Min Age:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="MinAgeComboBox" 
                                          Height="30">
                                    <ComboBoxItem Content="8" Tag="8"/>
                                    <ComboBoxItem Content="9" Tag="9"/>
                                    <ComboBoxItem Content="10" Tag="10"/>
                                    <ComboBoxItem Content="11" Tag="11"/>
                                    <ComboBoxItem Content="12" Tag="12"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                <TextBlock Text="Max Age:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="MaxAgeComboBox" 
                                          Height="30">
                                    <ComboBoxItem Content="12" Tag="12"/>
                                    <ComboBoxItem Content="13" Tag="13"/>
                                    <ComboBoxItem Content="14" Tag="14"/>
                                    <ComboBoxItem Content="15" Tag="15"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Current Questions List -->
                <GroupBox Header="Current Questions" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <ListBox x:Name="QuestionsListBox" 
                                 Height="200" 
                                 FontSize="12">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="{Binding QuestionText}" 
                                                   FontWeight="Bold" 
                                                   Foreground="#27AE60"/>
                                        <TextBlock Text="{Binding Answer}" 
                                                   Foreground="#7F8C8D" 
                                                   TextWrapping="Wrap"
                                                   Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding TopicId, StringFormat='Topic ID: {0}'}" 
                                                   FontSize="10" 
                                                   Foreground="#95A5A6"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button x:Name="AddQuestionButton" 
                    Content="➕ Add Question" 
                    Style="{StaticResource ModernButton}"
                    Click="AddQuestionButton_Click"
                    Margin="0,0,10,0"/>
            <Button x:Name="RefreshButton" 
                    Content="🔄 Refresh" 
                    Style="{StaticResource ModernButton}"
                    Click="RefreshButton_Click"
                    Margin="10,0"/>
            <Button x:Name="SaveButton" 
                    Content="💾 Save to JSON" 
                    Style="{StaticResource ModernButton}"
                    Click="SaveButton_Click"
                    Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>
