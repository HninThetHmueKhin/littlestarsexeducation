<Window x:Class="ChildSafeSexEducation.Desktop.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard - Little Star" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        WindowState="Maximized">
    
    <Window.Resources>
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActiveNavButton" TargetType="Button" BasedOn="{StaticResource NavButton}">
            <Setter Property="Background" Value="#27AE60"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" 
                Background="#2C3E50" 
                Padding="20">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="ðŸ› ï¸ Admin Panel" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>
                
                <!-- Navigation Buttons -->
                <Button x:Name="DashboardButton" 
                        Content="ðŸ“Š Dashboard" 
                        Style="{StaticResource ActiveNavButton}"
                        Click="DashboardButton_Click"/>
                
                <Button x:Name="ContentEditorButton" 
                        Content="ðŸ“ Content Editor" 
                        Style="{StaticResource NavButton}"
                        Click="ContentEditorButton_Click"/>
                
                <Button x:Name="UserManagementButton" 
                        Content="ðŸ‘¥ User Management" 
                        Style="{StaticResource NavButton}"
                        Click="UserManagementButton_Click"/>
                
                <Button x:Name="ErrorTicketsButton" 
                        Content="ðŸŽ« Error Tickets" 
                        Style="{StaticResource NavButton}"
                        Click="ErrorTicketsButton_Click"/>
                
                <!-- Spacer -->
                <Separator Margin="0,30,0,20" Background="#34495E"/>
                
                <!-- Logout Button -->
                <Button x:Name="LogoutButton" 
                        Content="ðŸšª Logout" 
                        Style="{StaticResource NavButton}"
                        Background="#E74C3C"
                        Click="LogoutButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" 
                Background="White" 
                Margin="20">
            <Grid>
                <!-- Dashboard Content -->
                <StackPanel x:Name="DashboardContent" 
                            Visibility="Visible">
                    <TextBlock Text="Admin Dashboard" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50" 
                               Margin="0,0,0,30"/>
                    
                    <!-- Stats Cards -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Total Users Card -->
                        <Border Grid.Column="0" 
                                Background="#3498DB" 
                                CornerRadius="10" 
                                Padding="20" 
                                Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="ðŸ‘¥" 
                                           FontSize="30" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="TotalUsersText" 
                                           Text="0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Users" 
                                           FontSize="14" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Total Questions Card -->
                        <Border Grid.Column="1" 
                                Background="#27AE60" 
                                CornerRadius="10" 
                                Padding="20" 
                                Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="â“" 
                                           FontSize="30" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="TotalQuestionsText" 
                                           Text="0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Questions" 
                                           FontSize="14" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Open Tickets Card -->
                        <Border Grid.Column="2" 
                                Background="#E67E22" 
                                CornerRadius="10" 
                                Padding="20" 
                                Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="ðŸŽ«" 
                                           FontSize="30" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="OpenTicketsText" 
                                           Text="0" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Open Tickets" 
                                           FontSize="14" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- System Status Card -->
                        <Border Grid.Column="3" 
                                Background="#9B59B6" 
                                CornerRadius="10" 
                                Padding="20" 
                                Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="âš¡" 
                                           FontSize="30" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Online" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="System Status" 
                                           FontSize="14" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Quick Actions -->
                    <TextBlock Text="Quick Actions" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50" 
                               Margin="0,0,0,15"/>
                    
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Content Editor Quick Access -->
                        <Button Grid.Column="0" 
                                Content="ðŸ“ Content Editor" 
                                Background="#8E44AD" 
                                Foreground="White"
                                FontSize="16"
                                FontWeight="Bold"
                                Padding="20,15" 
                                Margin="0,0,10,0"
                                Click="ContentEditorButton_Click"
                                Cursor="Hand"
                                Style="{StaticResource NavButton}"/>
                        
                        <!-- User Management Quick Access -->
                        <Button Grid.Column="1" 
                                Content="ðŸ‘¥ User Management" 
                                Background="#3498DB" 
                                Foreground="White"
                                FontSize="16"
                                FontWeight="Bold"
                                Padding="20,15" 
                                Margin="5,0"
                                Click="UserManagementButton_Click"
                                Cursor="Hand"
                                Style="{StaticResource NavButton}"/>
                        
                        <!-- Error Tickets Quick Access -->
                        <Button Grid.Column="2" 
                                Content="ðŸŽ« Error Tickets" 
                                Background="#E67E22" 
                                Foreground="White"
                                FontSize="16"
                                FontWeight="Bold"
                                Padding="20,15" 
                                Margin="10,0,0,0"
                                Click="ErrorTicketsButton_Click"
                                Cursor="Hand"
                                Style="{StaticResource NavButton}"/>
                    </Grid>
                    
                    <!-- Recent Activity -->
                    <TextBlock Text="Recent Activity" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50" 
                               Margin="0,0,0,15"/>
                    
                    <Border Background="#F8F9FA" 
                            CornerRadius="8" 
                            Padding="20" 
                            BorderBrush="#E9ECEF" 
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="â€¢ System started successfully" 
                                       FontSize="14" 
                                       Foreground="#495057" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="â€¢ Admin dashboard loaded" 
                                       FontSize="14" 
                                       Foreground="#495057" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="â€¢ Content management system ready" 
                                       FontSize="14" 
                                       Foreground="#495057"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Content Editor Content -->
                <StackPanel x:Name="ContentEditorContent" 
                            Visibility="Collapsed">
                    <TextBlock Text="Content Editor" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50" 
                               Margin="0,0,0,20"/>
                    
                    <Frame x:Name="ContentEditorFrame" 
                           NavigationUIVisibility="Hidden"/>
                </StackPanel>

                <!-- User Management Content -->
                <StackPanel x:Name="UserManagementContent" 
                            Visibility="Collapsed">
                    <TextBlock Text="User Management" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50" 
                               Margin="0,0,0,20"/>
                    
                    <Frame x:Name="UserManagementFrame" 
                           NavigationUIVisibility="Hidden"/>
                </StackPanel>

                <!-- Error Tickets Content -->
                <StackPanel x:Name="ErrorTicketsContent" 
                            Visibility="Collapsed">
                    <TextBlock Text="Error Service Tickets" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50" 
                               Margin="0,0,0,20"/>
                    
                    <Frame x:Name="ErrorTicketsFrame" 
                           NavigationUIVisibility="Hidden"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
