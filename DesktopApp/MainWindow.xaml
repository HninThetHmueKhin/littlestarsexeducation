<Window x:Class="ChildSafeSexEducation.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="⭐ Little Star" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#E8F8F5"
        ResizeMode="CanResize"
        MinHeight="400" MinWidth="800"
        WindowState="Normal">
    
    <Window.Resources>
        <!-- Font Configuration for Burmese Support -->
        <FontFamily x:Key="AppFontFamily">Segoe UI, "Myanmar Text", "Noto Sans Myanmar", "Padauk", Arial, sans-serif</FontFamily>
        
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryGreen" Color="#00D4AA"/>
        <SolidColorBrush x:Key="SecondaryGreen" Color="#00B894"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#0984E3"/>
        <SolidColorBrush x:Key="LightGreen" Color="#E8F8F5"/>
        <SolidColorBrush x:Key="TextDark" Color="#2D3436"/>
        <SolidColorBrush x:Key="TextLight" Color="#636E72"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        
        <!-- Modern Gradients -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00D4AA" Offset="0"/>
            <GradientStop Color="#00B894" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E8F8F5" Offset="0"/>
            <GradientStop Color="#D1F2EB" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Global Font Style for Burmese Support -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        </Style>
        
        <Style TargetType="PasswordBox">
            <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        </Style>
        
        <Style TargetType="ComboBoxItem">
            <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        </Style>
        
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        </Style>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Background="{StaticResource BackgroundGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Modern Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGradient}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <Image Grid.Column="0" 
                       Source="Images/logo.png.png" 
                       Width="50" 
                       Height="50" 
                       VerticalAlignment="Center"
                       Stretch="Uniform"/>
                
                <!-- Title -->
                <StackPanel Grid.Column="1" 
                            VerticalAlignment="Center" 
                            Margin="20,0,0,0">
                    <TextBlock Text="Little Star" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Child-Safe Education" 
                              FontSize="12" 
                              FontWeight="Normal" 
                              Foreground="White" 
                              HorizontalAlignment="Center"
                              Opacity="0.9"
                              Margin="0,3,0,0"/>
                </StackPanel>
                
                <!-- Decorative elements -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="🌟" FontSize="24" Margin="5,0"/>
                    <TextBlock Text="🧠" FontSize="20" Margin="5,0"/>
                    <TextBlock Text="🤖" FontSize="20" Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="15">
            <!-- Language Selection Panel -->
            <Border x:Name="LanguagePanel" 
                    Background="{StaticResource CardBackground}" 
                    CornerRadius="16" 
                    Padding="40" 
                    Visibility="Visible"
                    MaxWidth="600"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" 
                                    Direction="270" 
                                    ShadowDepth="3" 
                                    BlurRadius="12" 
                                    Opacity="0.15"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="LanguageTitle" 
                              Text="Select Language / ဘာသာစကားရွေးချယ်ပါ" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource PrimaryGreen}" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,30"
                              TextWrapping="Wrap"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <Button x:Name="EnglishButton" 
                                Content="🇺🇸 English" 
                                Background="{StaticResource PrimaryGradient}" 
                                Foreground="White"
                                FontSize="16"
                                FontWeight="Bold"
                                Padding="30,15"
                                Margin="0,0,15,0"
                                Click="EnglishButton_Click"
                                Cursor="Hand"
                                Style="{StaticResource ModernButton}"/>
                        
                        <Button x:Name="BurmeseButton" 
                                Content="🇲🇲 မြန်မာ" 
                                Background="{StaticResource PrimaryGradient}" 
                                Foreground="White"
                                FontSize="16"
                                FontWeight="Bold"
                                Padding="30,15"
                                Click="BurmeseButton_Click"
                                Cursor="Hand"
                                Style="{StaticResource ModernButton}"/>
                    </StackPanel>
                    
                    <Button x:Name="ContinueButton" 
                            Content="✨ Continue / ဆက်လက်လုပ်ဆောင်ပါ" 
                            Background="{StaticResource AccentBlue}" 
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            Padding="40,12"
                            Click="ContinueButton_Click"
                            Cursor="Hand"
                            Style="{StaticResource ModernButton}"/>
                </StackPanel>
            </Border>
            
            <!-- Login Panel -->
            <Border x:Name="LoginPanel" 
                    Background="{StaticResource CardBackground}" 
                    CornerRadius="16" 
                    Padding="30" 
                    Visibility="Collapsed"
                    MaxWidth="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" 
                                    Direction="270" 
                                    ShadowDepth="3" 
                                    BlurRadius="12" 
                                    Opacity="0.15"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Login Title -->
                    <TextBlock x:Name="LoginTitle" 
                              Text="Welcome Back!" 
                              FontSize="32" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource TextDark}" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,10"/>
                    
                    <TextBlock x:Name="LoginSubtitle" 
                              Text="Please login to continue your learning journey" 
                              FontSize="16" 
                              Foreground="{StaticResource TextLight}" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,30"/>
                    
                    <!-- Login Form -->
                    <Grid Width="400">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock x:Name="LoginUsernameLabel" 
                                  Text="Username:" 
                                  Grid.Row="0" Grid.Column="0" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource TextDark}" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,20,15"/>
                        <TextBox x:Name="LoginUsernameTextBox" 
                                 Grid.Row="0" Grid.Column="1" 
                                 FontSize="16" 
                                 Padding="20,15" 
                                 BorderBrush="{StaticResource PrimaryGreen}" 
                                 BorderThickness="2" 
                                 Margin="0,0,0,15"/>
                        
                        <TextBlock x:Name="LoginPasswordLabel" 
                                  Text="Password:" 
                                  Grid.Row="1" Grid.Column="0" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource TextDark}" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,20,15"/>
                        <PasswordBox x:Name="LoginPasswordBox" 
                                     Grid.Row="1" Grid.Column="1" 
                                     FontSize="16" 
                                     Padding="20,15" 
                                     BorderBrush="{StaticResource PrimaryGreen}" 
                                     BorderThickness="2" 
                                     Margin="0,0,0,15"/>
                        
                    <Button x:Name="LoginButton" 
                            Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                            Content="Login" 
                            Background="{StaticResource PrimaryGreen}" 
                            Foreground="White"
                            FontSize="18"
                            FontWeight="Bold"
                            Padding="20,15" 
                            Margin="0,20,0,20"
                            Click="LoginButton_Click"
                            Style="{StaticResource ModernButton}"/>
                    
                    <TextBlock Text="Admin: username='admin', password='admin' | User: your registered credentials" 
                              Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                              FontSize="11" 
                              Foreground="#95A5A6" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Don't have an account?" 
                                  Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                  FontSize="14" 
                                  Foreground="{StaticResource TextLight}" 
                                  HorizontalAlignment="Center" 
                                  Margin="0,0,0,10"/>
                        
                        <Button x:Name="SwitchToRegisterButton" 
                                Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                                Content="Create New Account" 
                                Background="Transparent" 
                                Foreground="{StaticResource AccentBlue}"
                                FontSize="16"
                                FontWeight="Bold"
                                Padding="10,5" 
                                Margin="0,0,0,20"
                                Click="SwitchToRegisterButton_Click"
                                BorderThickness="0"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Welcome Panel -->
            <Border x:Name="WelcomePanel" 
                    Background="{StaticResource CardBackground}" 
                    CornerRadius="16" 
                    Padding="30" 
                    Visibility="Collapsed"
                    MaxWidth="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" 
                                    Direction="270" 
                                    ShadowDepth="3" 
                                    BlurRadius="12" 
                                    Opacity="0.15"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="WelcomeTitle" 
                              Text="🌟 Welcome to Little Star! 🌟" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource PrimaryGreen}" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,15"
                              TextWrapping="Wrap"/>
                    
                    <TextBlock x:Name="WelcomeSubtitle" 
                              Text="Let's get to know you better!" 
                              FontSize="16" 
                              Foreground="{StaticResource TextLight}" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,20"/>
                    
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                        <Grid Width="600" MaxWidth="600">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock x:Name="NameLabel" 
                                  Text="Your Name:" 
                                  Grid.Row="0" Grid.Column="0" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource TextDark}" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,20,15"/>
                        <TextBox x:Name="NameTextBox" 
                                 Grid.Row="0" Grid.Column="1" 
                                 FontSize="16" 
                                 Padding="20,15" 
                                 BorderBrush="{StaticResource PrimaryGreen}" 
                                 BorderThickness="2" 
                                 Margin="0,0,0,15"/>
                        
                        <TextBlock x:Name="UsernameLabel" 
                                  Text="Username:" 
                                  Grid.Row="1" Grid.Column="0" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource TextDark}" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,20,15"/>
                        <TextBox x:Name="UsernameTextBox" 
                                 Grid.Row="1" Grid.Column="1" 
                                 FontSize="16" 
                                 Padding="20,15" 
                                 BorderBrush="{StaticResource PrimaryGreen}" 
                                 BorderThickness="2" 
                                 Margin="0,0,0,15"/>
                        
                        <TextBlock x:Name="PasswordLabel" 
                                  Text="Password:" 
                                  Grid.Row="2" Grid.Column="0" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource TextDark}" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,20,15"/>
                        <PasswordBox x:Name="PasswordBox" 
                                     Grid.Row="2" Grid.Column="1" 
                                     FontSize="16" 
                                     Padding="20,15" 
                                     BorderBrush="{StaticResource PrimaryGreen}" 
                                     BorderThickness="2" 
                                     Margin="0,0,0,15"/>
                        
                        <TextBlock x:Name="AgeLabel" 
                                  Text="Your Age:" 
                                  Grid.Row="3" Grid.Column="0" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource TextDark}" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,20,15"/>
                        <ComboBox x:Name="AgeComboBox" 
                                  Grid.Row="3" Grid.Column="1" 
                                  FontSize="16" 
                                  Padding="20,15" 
                                  BorderBrush="{StaticResource PrimaryGreen}" 
                                  BorderThickness="2" 
                                  Margin="0,0,0,15"/>
                        
                        <TextBlock x:Name="ParentNameLabel" 
                                  Text="Parent/Guardian Name:" 
                                  Grid.Row="4" Grid.Column="0" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource TextDark}" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,20,15"/>
                        <TextBox x:Name="ParentNameTextBox" 
                                 Grid.Row="4" Grid.Column="1" 
                                 FontSize="16" 
                                 Padding="20,15" 
                                 BorderBrush="{StaticResource PrimaryGreen}" 
                                 BorderThickness="2" 
                                 Margin="0,0,0,15"/>
                        
                        <TextBlock x:Name="ParentEmailLabel" 
                                  Text="Parent/Guardian Email:" 
                                  Grid.Row="5" Grid.Column="0" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource TextDark}" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,20,15"/>
                        <TextBox x:Name="ParentEmailTextBox" 
                                 Grid.Row="5" Grid.Column="1" 
                                 FontSize="16" 
                                 Padding="20,15" 
                                 BorderBrush="{StaticResource PrimaryGreen}" 
                                 BorderThickness="2" 
                                 Margin="0,0,0,15"/>
                        
                        <CheckBox x:Name="EmailNotificationsCheckBox" 
                                  Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                                  Content="Enable email notifications" 
                                  FontSize="14" 
                                  Foreground="{StaticResource TextDark}" 
                                  Margin="0,0,0,30"
                                  HorizontalAlignment="Center"/>
                        
                        <Button x:Name="StartButton" 
                                Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                                Content="🚀 Start Learning!" 
                                Background="{StaticResource PrimaryGreen}" 
                                Foreground="White"
                                FontSize="20"
                                FontWeight="Bold"
                                Padding="50,20"
                                HorizontalAlignment="Center"
                                Click="StartButton_Click"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="25" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <TextBlock Text="Already have an account?" 
                                  Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                                  FontSize="14" 
                                  Foreground="{StaticResource TextLight}" 
                                  HorizontalAlignment="Center" 
                                  Margin="0,20,0,10"/>
                        
                        <Button x:Name="SwitchToLoginButton" 
                                Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2"
                                Content="Login to Existing Account" 
                                Background="Transparent" 
                                Foreground="{StaticResource AccentBlue}"
                                FontSize="16"
                                FontWeight="Bold"
                                Padding="10,5" 
                                Margin="0,0,0,20"
                                Click="SwitchToLoginButton_Click"
                                BorderThickness="0"/>
                        </Grid>
                    </ScrollViewer>
                </StackPanel>
            </Border>
            
            <!-- Main Panel -->
            <Border x:Name="MainPanel" 
                    Background="{StaticResource CardBackground}" 
                    CornerRadius="16" 
                    Padding="20" 
                    Visibility="Collapsed"
                    Margin="0,10,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" 
                                    Direction="270" 
                                    ShadowDepth="3" 
                                    BlurRadius="12" 
                                    Opacity="0.15"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Welcome Text -->
                    <TextBlock x:Name="WelcomeText" 
                              Grid.Row="0" 
                              Text="Hi there! 👋" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource PrimaryGreen}" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,15"/>
                    
                    <!-- Chat Area -->
                    <ScrollViewer x:Name="ChatScrollViewer" 
                                  Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled" 
                                  Margin="0,0,0,15"
                                  MinHeight="300"
                                  MaxHeight="500">
                        <StackPanel x:Name="ChatPanel" 
                                   Orientation="Vertical" 
                                   Margin="5"/>
                    </ScrollViewer>
                    
                    <!-- Chat Input -->
                    <Grid Grid.Row="2" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="ChatInput" 
                                 Grid.Column="0" 
                                 FontSize="14" 
                                 Padding="12,10" 
                                 BorderBrush="{StaticResource PrimaryGreen}" 
                                 BorderThickness="2" 
                                 Margin="0,0,8,0" 
                                 KeyDown="ChatInput_KeyDown"/>
                        
                        <Button x:Name="SendButton" 
                                Grid.Column="1" 
                                Content="Send" 
                                Background="{StaticResource PrimaryGradient}" 
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                Padding="20,10"
                                Click="SendButton_Click"
                                Cursor="Hand"
                                Style="{StaticResource ModernButton}"/>
                    </Grid>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,8,0,0">
                        <Button x:Name="TopicsButton" 
                                Background="{StaticResource PrimaryGradient}" 
                                Foreground="White"
                                FontSize="12"
                                FontWeight="Bold"
                                Padding="15,8"
                                Margin="0,0,8,0"
                                Click="TopicsButton_Click"
                                Cursor="Hand"
                                Style="{StaticResource ModernButton}"/>
                        
                        <Button x:Name="SendDailyLogButton" 
                                Background="{StaticResource AccentBlue}" 
                                Foreground="White"
                                FontSize="12"
                                FontWeight="Bold"
                                Padding="15,8"
                                Margin="0,0,8,0"
                                Click="SendDailyLogButton_Click"
                                Cursor="Hand"
                                Style="{StaticResource ModernButton}"/>
                        
                        <Button x:Name="TestEmailButton" 
                                Background="{StaticResource PrimaryGradient}" 
                                Foreground="White"
                                FontSize="12"
                                FontWeight="Bold"
                                Padding="15,8"
                                Margin="0,0,8,0"
                                Click="TestEmailButton_Click"
                                Cursor="Hand"
                                Style="{StaticResource ModernButton}"/>
                        
                        <Button x:Name="ExitButton" 
                                Background="{StaticResource TextDark}" 
                                Foreground="White"
                                FontSize="12"
                                FontWeight="Bold"
                                Padding="15,8"
                                Click="ExitButton_Click"
                                Cursor="Hand"
                                Style="{StaticResource ModernButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Topics Popup -->
            <Border x:Name="TopicsPopup" 
                    Background="White" 
                    CornerRadius="15" 
                    Padding="20" 
                    Visibility="Collapsed"
                    BorderBrush="{StaticResource PrimaryGreen}"
                    BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock x:Name="TopicsTitle" 
                              Grid.Row="0" 
                              Text="Learning Topics" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource PrimaryGreen}" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,20"/>
                    
                    <!-- Tabs -->
                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,0,0,20">
                        <Button x:Name="TopicsTab" 
                                Content="Topics" 
                                Background="{StaticResource PrimaryGreen}" 
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                Padding="20,8"
                                Margin="0,0,5,0"
                                Click="TopicsTab_Click"
                                Cursor="Hand"/>
                        
                        <Button x:Name="QuestionsTab" 
                                Content="Questions" 
                                Background="{StaticResource TextDark}" 
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                Padding="20,8"
                                Margin="0,0,5,0"
                                Click="QuestionsTab_Click"
                                Cursor="Hand"/>
                        
                        <Button x:Name="BlogsTab" 
                                Content="Blogs" 
                                Background="{StaticResource TextDark}" 
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                Padding="20,8"
                                Click="BlogsTab_Click"
                                Cursor="Hand"/>
                    </StackPanel>
                    
                    <!-- Topics Content -->
                    <ScrollViewer Grid.Row="2" 
                                  VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="TopicsContent" 
                                   Orientation="Vertical" 
                                   Margin="10"/>
                    </ScrollViewer>
                    
                    <Button x:Name="CloseTopicsButton" 
                            Grid.Row="3" 
                            Content="Close" 
                            Background="{StaticResource TextDark}" 
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            Padding="30,10"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0"
                            Click="CloseTopicsButton_Click"
                            Cursor="Hand"/>
                </Grid>
            </Border>
            
            <!-- Blogs Panel -->
            <Border x:Name="BlogsPanel" 
                    Background="{StaticResource BackgroundLight}" 
                    CornerRadius="15" 
                    Padding="20" 
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Educational Articles" 
                              Grid.Row="0" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource PrimaryGreen}" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,20"/>
                    
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="BlogsList" 
                                   Orientation="Vertical" 
                                   Margin="10"/>
                    </ScrollViewer>
                    
                    <Button x:Name="BackToChatButton" 
                            Grid.Row="2" 
                            Content="← Back to Chat" 
